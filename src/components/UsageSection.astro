---
const keybindings = [
  ["space", "toggle pause"],
  ["left / h", "seek -5s"],
  ["right / l", "seek +5s"],
  ["+", "volume +5%"],
  ["-", "volume -5%"],
  ["v", "cycle visualizer (vu / spectrum / waterfall / waveform / lissajous / braille / dense / matrix / hatching / off)"],
  ["r", "toggle repeat (off / song / playlist)"],
  ["x", "cycle speed (1x / 2x / 0.5x)"],
  ["z", "toggle shuffle (playlist)"],
  ["n", "next track"],
  ["N / p", "previous track"],
  ["up / down", "scroll queue list (playlist)"],
  ["enter", "play selected track"],
  ["del / backspace", "remove selected track (playlist)"],
  ["s", "save as mp3 (url playback only)"],
  ["q / esc / ctrl+c", "quit"],
];
---

<div class="space-y-10">
  {/* Platform support */}
  <div>
    <h2 class="text-xs text-accent mb-3 text-balance">platforms</h2>
    <div class="bg-bg border border-border rounded-lg overflow-hidden">
      <table class="w-full text-xs">
        <tbody>
          <tr>
            <td class="px-4 py-1.5 text-center border-r border-border">
              <span class="text-green-500">✓</span>
              <span class="text-text-muted ml-2">windows</span>
            </td>
            <td class="px-4 py-1.5 text-center border-r border-border">
              <span class="text-green-500">✓</span>
              <span class="text-text-muted ml-2">macos</span>
            </td>
            <td class="px-4 py-1.5 text-center">
              <span class="text-green-500">✓</span>
              <span class="text-text-muted ml-2">linux</span>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  {/* Usage commands */}
  <div>
    <h2 class="text-xs text-accent mb-3 text-balance">usage</h2>
    <div class="bg-bg border border-border rounded-lg overflow-hidden">
      <table class="w-full text-xs">
        <tbody>
          <tr class="border-b border-border">
            <td class="px-4 py-1.5 text-text whitespace-nowrap w-1/3">climp</td>
            <td class="px-4 py-1.5 text-text-muted">open interactive file browser</td>
          </tr>
          <tr class="border-b border-border">
            <td class="px-4 py-1.5 text-text whitespace-nowrap w-1/3">climp song.mp3</td>
            <td class="px-4 py-1.5 text-text-muted">play local file (+ directory playlist)</td>
          </tr>
          <tr class="border-b border-border">
            <td class="px-4 py-1.5 text-text whitespace-nowrap w-1/3">climp playlist.m3u</td>
            <td class="px-4 py-1.5 text-text-muted">play local playlist file (.m3u, .m3u8, .pls)</td>
          </tr>
          <tr class="border-b border-border">
            <td class="px-4 py-1.5 text-text whitespace-nowrap w-1/3">climp &lt;url&gt;</td>
            <td class="px-4 py-1.5 text-text-muted">play from URL (YouTube, radio streams, etc)</td>
          </tr>
          <tr class="border-b border-border last:border-b-0">
            <td class="px-4 py-1.5 text-text whitespace-nowrap w-1/3">climp &lt;playlist-url&gt;</td>
            <td class="px-4 py-1.5 text-text-muted">play YouTube or SoundCloud playlist</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  {/* Keybindings */}
  <div>
    <h2 class="text-xs text-accent mb-3 text-balance">keybindings</h2>
    <div class="bg-bg border border-border rounded-lg overflow-hidden">
      <table class="w-full text-xs">
        <tbody>
          {keybindings.map(([key, action]) => (
            <tr class="border-b border-border last:border-b-0">
              <td class="px-4 py-1.5 text-text whitespace-nowrap w-1/3">{key}</td>
              <td class="px-4 py-1.5 text-text-muted">{action}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
</div>
